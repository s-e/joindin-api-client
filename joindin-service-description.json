{
    "name": "joind.in",
    "apiVersion": "2.1",
    "baseUrl": "http://api.dev.joind.in:8080",
    "description": "Joind.in is an open source website (and RESTful API) that allows event promoters, speakers and attendees to post events and talks and leave feedback for both.",
    "operations": {
        "getEvents": {
            "httpMethod": "GET",
            "uri": "v2.1/events"
        },
        "getEvent": {
            "httpMethod": "GET",
            "uri": "v2.1/events/{eventId}",
            "parameters": {
                "eventId": {
                    "location": "uri"
                }
            }
        },
        "getEventTalks": {
            "httpMethod": "GET",
            "uri": "v2.1/events/{eventId}/talks",
            "parameters": {
                "eventId": {
                    "location": "uri"
                }
            }
        },
        "getEventTalk": {
            "httpMethod": "GET",
            "uri": "v2.1/events/{eventId}/talks/{talkId}",
            "parameters": {
                "eventId": {
                    "location": "uri"
                },
                "talkId": {
                    "location": "uri"
                }
            }
        },
        "getEventTalkComments": {
            "httpMethod": "GET",
            "uri": "v2.1/events/{eventId}/talks/{talkId}/comments",
            "parameters": {
                "eventId": {
                    "location": "uri"
                },
                "talkId": {
                    "location": "uri"
                }
            }
        },
        "getUser": {
            "httpMethod": "GET",
            "uri": "v2.1/users/{userId}",
            "parameters": {
                "userId": {
                    "location": "uri"
                }
            }
        }
    }    
}
